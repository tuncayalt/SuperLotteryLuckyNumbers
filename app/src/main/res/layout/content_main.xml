<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuncay.superlotteryluckynumbers.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/textview_round"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="10dp"
            android:ems="2"
            android:id="@+id/edtNum1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/textview_round"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:ems="2"
            android:id="@+id/edtNum2" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/textview_round"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:ems="2"
            android:id="@+id/edtNum3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/textview_round"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:ems="2"
            android:id="@+id/edtNum4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/textview_round"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:ems="2"
            android:id="@+id/edtNum5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/textview_round"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:ems="2"
            android:id="@+id/edtNum6" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Şanslı Numara Bul"
            android:background="@drawable/buttonshapeactive"
            android:textColor="#EEEEEE"
            android:onClick="Doldur"
            android:id="@+id/btnYeniNo" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Kendin Numara Gir"
            android:background="@drawable/buttonshape"
            android:textColor="#EEEEEE"
            android:onClick="NumPicker"
            android:id="@+id/btnBastan" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kupondan Al"
        android:background="@drawable/buttonshape"
        android:textColor="#EEEEEE"
        android:visibility="gone"
        android:onClick="KupondanAl"
        android:id="@+id/btnKupondanAl" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#FF00FF00"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>-->

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:id="@+id/listView" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnDate" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tarihindeki çekilişe seçili sayıları oynadım."
            android:textColor="#EEEEEE"
            android:id="@+id/txtOynadim"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaydet"
            android:background="@drawable/buttonshapeactive"
            android:textColor="#EEEEEE"
            android:onClick="Kaydet"
            android:layout_weight="1"
            android:id="@+id/btnKaydet" />
    </LinearLayout>



</LinearLayout>
